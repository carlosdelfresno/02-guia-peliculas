---
import Layout from '../../layouts/Layout.astro'
import Card from '../../components/Card.astro'
import data from '../../data/got.json'

export const getStaticPaths = () => {
  return data.characters
    .filter((ch) => ch.id)
    .map((movie) => {
      return {
        params: {
          id: movie.id
        },
        props: { movie }
      }
    })
}

const { movie } = Astro.props
---

<Layout title='Welcome to Astro.'>
  <main class='h-screen'>
    <a
      class='m-3 inline-block rounded-full border border-indigo-600 p-3 text-indigo-600 hover:bg-indigo-600 hover:text-white focus:outline-none focus:ring active:bg-indigo-500'
      href='/personajes' title="Volver a personajes"
    >
      <svg
        width='40'
        height='40'
        viewBox='0 0 2048 2048'
        xmlns='http://www.w3.org/2000/svg'
      >
        <path
          fill='#0ea5e9'
          d='M2048 1088H250l787 787l-90 90L6 1024L947 83l90 90l-787 787h1798v128z'
        ></path>
      </svg>
    </a>
    <section class=''>
      {
        (
          <div class='flex flex-col gap-10'>
            <h1
              class='text-8xl text-white self-center'
              transition:name={`ch-name-${movie.id}`}
            >
              {movie.characterName}
            </h1>
            <img
              class='self-center max-h-[600px]'
              transition:name={`ch-${movie.id}`}
              src={movie.characterImageFull}
              alt={movie.characterName}
            />
          </div>
        )
      }
    </section>
  </main>
</Layout>
